.hSearch {
  width: 750rpx;
  height: 112rpx;
  padding: 20rpx;
  background: #fff;
  position: relative;
  box-sizing: border-box;
}

.hSearch .search {
  width: 100%;
  padding: 3px 15px;
  height: 72rpx;
  line-height: 72rpx;
  background: #f2f2f2;
  border-radius: 40rpx;
  float: left;
  box-sizing: border-box;
  position: relative;
}
.hSearch .search .img {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 50%;
  left: 25rpx;
  margin-top: -15rpx;
}
.hSearch .search .ipt {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  position: absolute;
  top: 0;
  left: 70rpx;
  background: transparent;
  border: none;
}
