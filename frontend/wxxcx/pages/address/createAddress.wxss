.ruleForm  {
  border-top: 15rpx solid #F5F5F5;
}
.ruleForm .item {
  width: 100%;
  padding: 25rpx 28rpx;
  box-sizing: border-box;
  float: left;
  background-color: #fff;
  border-bottom: 1rpx solid #EDEDED;
  position: relative;
}
.ruleForm .item .label {
  width: 130rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 54rpx;
  float: left;
  margin-right: 53rpx;
}
.ruleForm .item .label2 {
  width: 100%;
}
.ruleForm .item .label3 {
  font-size: 32rpx;
  color: #333;
}
.ruleForm .item .label3 checkbox {
  float: left;
}
.ruleForm .item .label3 checkbox .wx-checkbox-input {
  width: 42rpx;
  height: 42rpx;
}
.ruleForm .item .label3 .txt {
  height:50rpx;
  line-height: 50rpx;
  float: left;
  
} 
.ruleForm .item .ipt {
  font-size: 32rpx;
  color: #999;
  float: left;
  line-height: 31rpx;
  height: 31rpx;
}
.ruleForm .item .textarea {
  width: 500rpx;
  height: 200rpx;
  padding-top: 10rpx;
  line-height: 31rpx;
  float: left;
  font-size: 32rpx;
  color: #999;
}
.ruleForm .item .pic {
  width:11rpx;
  height: 19rpx;
  position: absolute;
  right: 28rpx;
  top:50%;
  margin-top: -10rpx;
}
.panelBox {
  width: 100%;
  float: left;
  border-top: 15rpx solid #F5F5F5;
  padding: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.panelBox .title {
  font-size: 24rpx;
  color: #333;
}
.panelBox .textarea {
  background-color: #F1F1F1;
  height: 170rpx;
  margin-top: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.panelBox .tool {
  text-align: right;
}
.panelBox .tool .btn {
  width: 60rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333333;
  display: inline-block;
}
.panelBox .tool .btnBg {
  background-color: #FF831B;
  color: #fff;
  margin-left: 14rpx;
}
.btm-btn {
  width: 100%;
  padding:0 28rpx;
  float: left;
  margin-top: 50rpx;
  box-sizing: border-box;
}
.btm-btn .txt {
  width: 100%;
  line-height: 88rpx;
  text-align: center;
  background-color: #FF831B;
  color: #fff;
}