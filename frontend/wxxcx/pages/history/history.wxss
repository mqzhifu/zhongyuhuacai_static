.panel {
  width: 100%;
  margin-top:13rpx
}
.panel .del {
  font-size: 24rpx;
  color: #ccc;
  width:57rpx;
  height:26rpx;
  line-height: 26rpx;
  text-align: center;
  border:1rpx solid #CCCCCC;
  border-radius:5rpx;
}
.panel .bar{
  width:100%;
  padding: 0 21rpx;
  height:43rpx;
  float: left;
  margin-bottom: 16rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.panel .bar .del {
  float: left;
  margin-right: 11rpx;
  margin-top: 8rpx;
}
.panel .bar .txt {
  font-size: 24rpx;
  color: #666;
  float: left;
  margin-top: 8rpx;
}
.panel .items {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.panel .items .item {
  float: left;
  width: 32%;
  padding: 10rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 2%;
  box-sizing: border-box;
}
.panel .item .img {
  width: 100%;
  height: 220rpx;
  border-radius: 10rpx;
}
.panel .item .name {
  color: #202020;
  font-size: 28rpx;
  line-height: 36rpx;
  height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  margin-top: 8rpx;
  margin-bottom: 12.5rpx;
}
.panel .item .bottom .price {
  font-size: 36rpx;
  color: #FF831B;
  float: left;
}
.panel .item .bottom .price em {
  font-size: 32rpx;
}
.panel .item .bottom .del {
  float: right;
  margin-top: 13rpx;
}
.panel .item:nth-child(3n-1) {
  margin: 0 2%;
}
.list-hot .more {
  width: 100%;
  line-height: 56rpx;
  font-size: 28rpx;
  text-align: center;
}
.list-hot .more a {
  color: #666;
  text-decoration: none;
}