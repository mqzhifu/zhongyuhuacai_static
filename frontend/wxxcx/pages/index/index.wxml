<!--index.wxml-->
<view class="container">
    <!--<button open-type='getUserInfo' >获取授权</button>-->
  <!-- <v-header/> -->
  <!-- //End h5导航 -->
  <v-search />
  <!-- //End 搜索部分 -->

  <v-swiper listData="{{swiperList}}"/>
  <!-- //End 轮播图 -->

  <view class="bd">
      <v-navs list="{{categoryList}}" />
  </view>
  <!-- //End 导航 -->

  <view class="bd list-hot">
    <view class="title">
      <image class="img" src="images/home-icon-hot@2x.png" />
      <text class="name">人气推荐</text>
    </view>
    <view class="items">
      <view class="item"  wx:for="{{hotList}}" wx:key="index">
        <image class="img" src="{{item.pic}}" alt="" />
        <view class="name" bindtap="click" data-pid="{{item.id}}">{{item.title}}</view>
        <view class="bottom">
          <view class="price">
            <text>￥</text>
            <text>{{item.lowest_price}}</text>
          </view>
          <view class="priced">{{item.goods_total}}人付款</view>
        </view>
      </view>
    </view>
    <view class="more">点击继续加载</view>
  </view>
  <!-- //End 人气推荐 -->

  <!-- <v-footer /> -->
  <!-- footer -->

</view>
