.pageOrders .tabs {
  width: 100%;
  float: left;
  background: #fff;
}
.pageOrders .tabs .item {
  width: 20%;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #333333;
  text-align: center;
  padding-top: 38rpx;
  padding-bottom: 20rpx;
  float: left;
  position: relative;
}
.pageOrders .tabs .item.active {
  color: #ff831b;
}
.pageOrders .tabs .item.active .line {
  width: 100%;
  height: 4rpx;
  background: #ff831b;
  position: absolute;
  bottom: 0;
  left: 0;
}
/* ----------- */
.tabPanel {
  width: 100%;
  float: left;
}
.pageOrders .item {
  box-sizing: border-box;
  background: #fff;
  position: relative;
  padding-bottom: 23rpx;
  margin-bottom: 10rpx;
}
.pageOrders .item .status {
  text-align: right;
  font-size: 26rpx;
  color: #ff831b;
  padding: 24rpx 30rpx 20rpx 0;
}
.pageOrders .item .main {
  height: 192rpx;
  display: flex;
  padding: 16rpx 28rpx;
  background: #f2f2f2;
  box-sizing: border-box;
}
.pageOrders .item .main .thumb {
  width: 159rpx;
  height: 159rpx;
  border: 1px solid #eee;
  float: left;
  margin-right: 28rpx;
  flex: 0 0 159rpx;
}
.pageOrders .item .main .thumb image {
  width: 100%;
  height: 100%;
}
.pageOrders .item .main .info {
  flex: 0 0 360rpx;
  padding-right: 30rpx;
  height: 159rpx;
}
.pageOrders .item .main .info .desc {
  font-size: 28rpx;
  color: #333;
  line-height: 36rpx;
  margin-bottom: 16rpx;
}
.pageOrders .item .main .info .cate {
  font-size: 20rpx;
  color: #888;
}
.pageOrders .item .main .price {
  flex: 0 0 130rpx;
  text-align: right;
}
.pageOrders .item .main .price .txt {
  font-size: 24rpx;
  color: #333;
}
.pageOrders .item .main .price .num {
  font-size: 20rpx;
  color: #999;
  margin-top: 14rpx;
}
.pageOrders .item .total {
  text-align: right;
  height: 24rpx;
  line-height: 24rpx;
  padding-top: 24rpx;
  padding-bottom: 16rpx;
  position: relative;
}
.pageOrders .item .total text {
  font-size: 24rpx;
  color: #333333;
}
.pageOrders .item .total .price {
  color: #ff831b;
}
/* --------- */
.pageOrders .item .tools {
  padding-top: 40rpx;
  padding-bottom: 11rpx;
  text-align: right;
  padding-left: 27rpx;
  padding-right: 27rpx;
}
.pageOrders .item .tools .btn {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #333;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: inline-block;
  margin-left: 19rpx;
}
.pageOrders .item .tools .btn.confirm {
  color: #fff;
  border: 1rpx solid #ff831b;
  background: #ff831b;
}
.pageOrders .item .tools .more {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  display: inline-block;
  margin-right: 10rpx;
}
.pageOrders .item .btmDesc {
  padding: 0 13rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #f2f2f2;
  margin-left: 28rpx;
  margin-right: 26rpx;
  overflow: hidden;
}
.pageOrders .item .btmDesc image {
  width: 30rpx;
  height: 23rpx;
  margin-right: 5rpx;
  float: left;
  position: relative;
  top: 15rpx;
}
.pageOrders .item .btmDesc text {
  width: 630rpx;
  font-size: 24rpx;
  color: #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  float: left;
}
